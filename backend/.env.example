# API Keys
OPENAI_API_KEY=sk-your-openai-key-here
PINECONE_API_KEY=your-pinecone-key-here
LANGCHAIN_API_KEY=your-langsmith-key-here

# Environment
ENVIRONMENT=development
DEBUG=true

# LangSmith
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=workspace-assistant

# Pinecone
# Get your host from: https://app.pinecone.io -> Select your index -> Copy host URL
# Format: https://your-index-name-xxxxx.svc.environment.pinecone.io
PINECONE_HOST=your-pinecone-host-url-here
PINECONE_INDEX_NAME=workspace-memory

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Server
HOST=0.0.0.0
PORT=8000
